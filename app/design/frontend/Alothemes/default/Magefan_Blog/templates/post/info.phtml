            <?php if ($n != $_categoriesCount) { ?>, <?php } ?>
        <?php } ?>
    </div>
    <?php } ?>
    <div class="posted-date dots">
        <span class="label"><?php echo __('Posted:') ?></span>
        <span class="value"><?php echo $block->getPostedOn('F d, Y') ?></span>
    </div>
</div>